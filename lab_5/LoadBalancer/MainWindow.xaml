<Window x:Class="DistributedBalancing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Централизованный алгоритм балансировки" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="TreeViewNodes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="400"/>
        <TextBox x:Name="LogTextBox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="450" Height="300" Margin="0,0,10,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        <Button Content="Запустить балансировку" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="200" Height="50" Click="StartBalancing_Click"/>
    </Grid>
</Window>
